<AnchorPane fx:id="anchorPane" style="-fx-background-color: linear-gradient(to bottom, #f8f9fa, #e6f5f5);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.ListeHistoriqueController">
    <children>
        <!-- Topbar (unchanged as per requirement) -->
        <HBox layoutX="0.0" layoutY="0.0" prefHeight="40.0" style="-fx-background-color: #30b4b4;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Monday - Saturday, 8AM to 10PM" textFill="WHITE">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <HBox.margin>
                                <Insets left="20.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <HBox alignment="CENTER_RIGHT">
                    <children>
                        <Label text="Call us now +1 5589 55488 55" textFill="WHITE">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <HBox.margin>
                                <Insets right="20.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
            </children>
        </HBox>

        <!-- Branding and Navigation (unchanged as per requirement) -->
        <HBox layoutX="0.0" layoutY="40.0" prefHeight="90.0" style="-fx-background-color: white; -fx-border-color: #f0f0f0; -fx-border-width: 0 0 1 0;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
            <children>
                <StackPane HBox.hgrow="ALWAYS">
                    <children>
                        <HBox alignment="CENTER_LEFT" HBox.hgrow="NEVER">
                            <StackPane style="-fx-background-radius: 5;" styleClass="logo-container">
                                <padding>
                                    <Insets bottom="8.0" left="15.0" right="15.0" top="8.0" />
                                </padding>
                                <ImageView fitHeight="110.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 4, 0, 0, 1);">
                                    <image>
                                        <Image url="@/images/logo.png" />
                                    </image>
                                </ImageView>
                            </StackPane>
                            <HBox.margin>
                                <Insets left="40.0" right="30.0" />
                            </HBox.margin>
                        </HBox>

                        <HBox alignment="CENTER" spacing="20.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#navigateToHome" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Accueil">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Ã€ propos">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Services">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Departments">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Produits">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #30b4b4; -fx-font-weight: bold;" text="Suivi">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                                <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Contact">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                </Button>
                            </children>
                        </HBox>

                        <HBox alignment="CENTER_RIGHT" spacing="15.0">
                            <children>
                                <Button mnemonicParsing="false" onAction="#navigateToProfile" style="-fx-background-color: #30b4b4; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(48,180,180,0.2), 8, 0, 0, 0);" text="Mon Profil">
                                    <font>
                                        <Font size="14.0" />
                                    </font>
                                    <padding>
                                        <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                                    </padding>
                                    <HBox.margin>
                                        <Insets right="40.0" />
                                    </HBox.margin>
                                </Button>
                            </children>
                        </HBox>
                    </children>
                </StackPane>
            </children>
        </HBox>

        <!-- Main Content -->
        <BorderPane fx:id="mainBorderPane" layoutX="0.0" layoutY="130.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="130.0">
            <top>
                <HBox prefHeight="40.0" style="-fx-background-color: white; -fx-padding: 8 25; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.05), 5, 0, 0, 2);">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="8.0">
                            <children>
                                <Button onAction="#navigateToHome" style="-fx-background-color: transparent; -fx-text-fill: #777777; -fx-padding: 0;" text="Accueil" />
                                <Label text="&gt;" textFill="#777777" />
                                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Historiques de Traitement" textFill="#30b4b4" />
                            </children>
                        </HBox>
                    </children>
                </HBox>
            </top>
            <center>
                <VBox spacing="20.0" style="-fx-padding: 0 25;">
                    <children>
                        <!-- Header -->
                        <HBox alignment="CENTER_LEFT" spacing="20.0">
                            <children>
                                <VBox HBox.hgrow="ALWAYS">
                                    <children>
                                        <Label style="-fx-font-weight: bold; -fx-font-family: 'Segoe UI';" text="Historiques de Traitement">
                                            <font>
                                                <Font size="28.0" />
                                            </font>
                                        </Label>
                                        <Separator style="-fx-background-color: linear-gradient(to right, #30b4b4, #e6f5f5);" />
                                    </children>
                                </VBox>
                            </children>
                            <VBox.margin>
                                <Insets bottom="15.0" top="15.0" />
                            </VBox.margin>
                        </HBox>

                        <!-- List Container -->
                        <VBox style="-fx-background-color: white; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0.1, 0, 3); -fx-padding: 20; -fx-background-radius: 15;" VBox.vgrow="ALWAYS">
                            <children>
                                <ListView fx:id="listViewHistorique" style="-fx-background-color: transparent; -fx-background-insets: 0; -fx-padding: 15;" VBox.vgrow="ALWAYS" />
                            </children>
                        </VBox>
                    </children>
                </VBox>
            </center>
        </BorderPane>
    </children>
