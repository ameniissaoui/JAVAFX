<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="TOP_CENTER" spacing="15.0"
      prefHeight="500.0" prefWidth="700.0">

    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>

    <Label text="User Registration" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

    <GridPane hgap="10.0" vgap="15.0" alignment="CENTER">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="150.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="250.0"/>
        </columnConstraints>

        <!-- Row 0 -->
        <Label text="Last Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="nomField" promptText="Enter your last name"
                   GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="First Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="prenomField" promptText="Enter your first name"
                   GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <!-- Row 1 -->

        <!-- Row 2 -->
        <Label text="Email:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="emailField" promptText="Enter your email"
                   GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <!-- Row 3 -->
        <Label text="Password:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="passwordField" promptText="Enter your password"
                       GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <!-- Row 4 -->
        <Label text="Date of Birth:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <DatePicker fx:id="dateNaissancePicker" promptText="Select your birth date"
                    GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <!-- Row 5 -->
        <Label text="Phone:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="telephoneField" promptText="Enter your phone number"
                   GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    </GridPane>

</VBox>