{# templates/back/debug.html.twig #}
{% extends 'base.html.twig' %}

{% block main %}
    <div class="pagetitle">
        <h1>Debug Excel - {{ filename }}</h1>
        <nav>
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_back') }}">Home</a></li>
                <li class="breadcrumb-item">Debug</li>
                <li class="breadcrumb-item active">Excel</li>
            </ol>
        </nav>
    </div>

    <section class="section">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Analyse du fichier Excel</h5>

                        <div class="table-responsive">
                            <table class="table table-striped table-sm">
                                <thead>
                                    <tr>
                                        <th>Ligne</th>
                                        <th>Colonne A (brut)</th>
                                        <th>Colonne A (nettoyé)</th>
                                        <th>Colonne B</th>
                                        <th>Colonne C</th>
                                        <th>Code Employé?</th>
                                        <th>Nom Mois?</th>
                                        <th>Longueur A</th>
                                        <th>Type A</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for row in debug_data %}
                                        <tr class="{% if row.is_employee_code %}table-success{% elseif row.is_month_name %}table-info{% endif %}">
                                            <td><strong>{{ row.row }}</strong></td>
                                            <td><code>{{ row.cellA_raw }}</code></td>
                                            <td><code>{{ row.cellA_clean }}</code></td>
                                            <td>{{ row.cellB }}</td>
                                            <td>{{ row.cellC }}</td>
                                            <td>
                                                {% if row.is_employee_code %}
                                                    <span class="badge bg-success">OUI</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">NON</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if row.is_month_name %}
                                                    <span class="badge bg-info">OUI</span>
                                                {% else %}
                                                    <span class="badge bg-secondary">NON</span>
                                                {% endif %}
                                            </td>
                                            <td>{{ row.cellA_length }}</td>
                                            <td>{{ row.cellA_type }}</td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <a href="{{ path('app_table') }}" class="btn btn-primary">Retour à l'import</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}