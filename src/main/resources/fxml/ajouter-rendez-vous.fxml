<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.controllers.AjouterRendezVousController"
      prefHeight="600.0" prefWidth="550.0"
      spacing="10"
      style="-fx-background-color: white;">

    <!-- En-tête stylisé -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #007bff; -fx-padding: 15;">
        <Label text="📝" style="-fx-font-size: 24px; -fx-text-fill: white;"/>
        <Label fx:id="headerLabel" text="Créer un nouveau rendez-vous" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <!-- Formulaire -->
    <VBox spacing="15" style="-fx-padding: 20 30;">
        <Label text="Date et Heure du rendez-vous" style="-fx-font-weight: bold;"/>
        <DatePicker fx:id="datePicker" prefWidth="400"/>

        <Label text="Heure" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
        <ComboBox fx:id="cmbHeure" promptText="Sélectionnez l'heure" prefWidth="400"/>

        <Label text="Statut" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
        <ComboBox fx:id="cmbStatut" promptText="Sélectionnez le statut" prefWidth="400"/>

        <Label text="Description" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
        <TextArea fx:id="txtDescription" prefWidth="400" prefHeight="100"/>

        <Label text="Planning du médecin" style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>
        <ComboBox fx:id="cmbPlanning" promptText="Sélectionnez un planning" prefWidth="400"/>

        <!-- AJOUTÉ: Section Google Calendar -->
        <CheckBox fx:id="chkAddToGoogleCalendar"
                  text="Ajouter à Google Calendar"
                  style="-fx-padding: 15 0 0 0;"/>

        <Button fx:id="btnViewInGoogleCalendar"
                text="Voir dans Google Calendar"
                visible="false"
                style="-fx-background-color: #4285F4; -fx-text-fill: white; -fx-padding: 8 15;"/>
    </VBox>

    <!-- Zone des boutons -->
    <HBox alignment="CENTER_RIGHT" spacing="10" style="-fx-padding: 10 30 20 30;">
        <Button fx:id="btnAnnuler" text="Annuler" style="-fx-padding: 8 15;"/>
        <Button fx:id="btnEnregistrer" text="Enregistrer le rendez-vous"
                style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
    </HBox>
</VBox>