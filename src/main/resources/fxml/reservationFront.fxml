        -fx-border-radius: 10px;
        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 10);
        -fx-padding: 15px;
        }

        /* Styles pour les boutons d'action */
        .btn-modifier {
        -fx-background-color: #43ACD1;
        -fx-text-fill: white;
        -fx-background-radius: 5;
        -fx-cursor: hand;
        }

        .btn-modifier:hover {
        -fx-background-color: #3899ba;
        }

        .btn-supprimer {
        -fx-background-color: #ff6b6b;
        -fx-text-fill: white;
        -fx-background-radius: 5;
        -fx-cursor: hand;
        }

        .btn-supprimer:hover {
        -fx-background-color: #e06060;
        }

        .btn-pdf {
        -fx-background-color: #2ecc71;
        -fx-text-fill: white;
        -fx-background-radius: 5;
        -fx-cursor: hand;
        }

        .btn-pdf:hover {
        -fx-background-color: #27ae60;
        }

        .btn-qrcode {
        -fx-background-color: #9b59b6;
        -fx-text-fill: white;
        -fx-background-radius: 5;
        -fx-cursor: hand;
        }

        .btn-qrcode:hover {
        -fx-background-color: #8e44ad;
        }

        /* Styles pour le champ de recherche */
        .search-field {
        -fx-background-radius: 20;
        -fx-border-radius: 20;
        -fx-font-size: 14px;
        -fx-padding: 10px;
        }

        /* Styles pour le ScrollPane */
        .scroll-pane {
        -fx-background-color: transparent;
        -fx-background: transparent;
        }

        .scroll-pane > .viewport {
        -fx-background-color: transparent;
        }

        .flow-pane {
        -fx-background-color: transparent;
        }
    </style>


    <top>
        <VBox>
            <!-- Top Bar -->
            <HBox alignment="CENTER" spacing="10" style="-fx-background-color: #30b4b4; -fx-padding: 10;">
                <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS" spacing="10">
