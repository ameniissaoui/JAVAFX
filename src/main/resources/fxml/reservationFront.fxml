            </HBox>

            <!-- Conteneur pour les cartes -->
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" styleClass="scroll-pane">
                <FlowPane fx:id="cardsContainer" hgap="20" vgap="20" alignment="CENTER" styleClass="flow-pane">
