        }

        /* Styles pour la barre de navigation */
        .top-nav-bar {
        -fx-background-color: white;
        -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 4, 0, 0, 4);
        -fx-padding: 10px;
        }

        .nav-button {
        -fx-background-color: transparent;
        -fx-text-fill: #6c757d;
        -fx-font-size: 13px;
        -fx-font-weight: bold;
        -fx-padding: 5px 10px;
        -fx-cursor: hand;
        }

        .nav-button:hover {
        -fx-text-fill: #3fbbc0;
        }

        .profile-button {
        -fx-background-color: #3fbbc0;
        -fx-text-fill: white;
        -fx-font-weight: bold;
        -fx-padding: 8px 15px;
        -fx-background-radius: 20;
        -fx-cursor: hand;
        }

        .profile-button:hover {
