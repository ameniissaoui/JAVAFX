            </HBox>
        </VBox>
    </top>


    <!-- Contenu principal -->
    <center>
        <VBox alignment="CENTER" spacing="20" AnchorPane.leftAnchor="6.0" AnchorPane.rightAnchor="6.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20" />
