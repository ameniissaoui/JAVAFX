<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.layout.Region?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="800.0" prefWidth="1200.0" styleClass="root" stylesheets="@/css/doctor_list.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.controllers.DoctorListController">
    <top>
        <VBox>
            <HBox prefHeight="40.0" prefWidth="1200.0" style="-fx-background-color: #30b4b4;">
                <children>
                    <HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                        <children>
                            <Label text="Monday - Saturday, 8AM to 10PM" textFill="WHITE">
                                <font>
                                    <Font size="12.0" />
                                </font>
                                <HBox.margin>
                                    <Insets left="20.0" />
                                </HBox.margin>
                            </Label>
                        </children>
                    </HBox>
                    <HBox alignment="CENTER_RIGHT">
                        <children>
                            <Label text="Call us now +1 5589 55488 55" textFill="WHITE">
                                <font>
                                    <Font size="12.0" />
                                </font>
                                <HBox.margin>
                                    <Insets right="20.0" />
                                </HBox.margin>
                            </Label>
                        </children>
                    </HBox>
                </children>
            </HBox>
            <HBox prefHeight="90.0" prefWidth="1200.0" style="-fx-background-color: white; -fx-border-color: #f0f0f0; -fx-border-width: 0 0 1 0;">
                <children>
                    <StackPane HBox.hgrow="ALWAYS">
                        <children>
                            <!-- Enhanced Logo Section -->
                            <HBox alignment="CENTER_LEFT" HBox.hgrow="NEVER">
                                <StackPane styleClass="logo-container" style="-fx-background-radius: 5;">
                                    <padding>
                                        <Insets top="8.0" right="15.0" bottom="8.0" left="15.0" />
                                    </padding>
                                    <ImageView fitHeight="100.0" fitWidth="220.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.08), 4, 0, 0, 1);">
                                        <image>
                                            <Image url="@/images/logo.png" />
                                        </image>
                                    </ImageView>
                                </StackPane>
                                <HBox.margin>
                                    <Insets left="40.0" right="30.0" />
                                </HBox.margin>
                            </HBox>
                            <HBox alignment="CENTER" spacing="20.0">
                                <children>
                                    <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Accueil">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                    <Button fx:id="historique" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Historiques">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                    <Button fx:id="demandeButton" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Demande">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                    <Button fx:id="rendezVousButton" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Rendez-vous">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                    <Button fx:id="produit" mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Nos Produits">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                    <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #30b4b4; -fx-font-weight: bold;" text="Nos Médecins">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                    <Button mnemonicParsing="false" style="-fx-background-color: transparent; -fx-text-fill: #333333;" text="Contact">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                    </Button>
                                </children>
                            </HBox>
                            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                                <children>
                                    <Button mnemonicParsing="false" onAction="#backToProfile" style="-fx-background-color: #30b4b4; -fx-text-fill: white; -fx-background-radius: 20; -fx-effect: dropshadow(three-pass-box, rgba(48,180,180,0.2), 8, 0, 0, 0);" text="Mon Profil">
                                        <font>
                                            <Font size="14.0" />
                                        </font>
                                        <padding>
                                            <Insets bottom="8.0" left="16.0" right="16.0" top="8.0" />
                                        </padding>
                                        <HBox.margin>
                                            <Insets right="40.0" />
                                        </HBox.margin>
                                    </Button>
                                </children>
                            </HBox>
                        </children>
                    </StackPane>
                </children>
            </HBox>
        </VBox>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="15.0" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="15.0" />
            </padding>
            <children>
                <!-- Header Title -->
                <Label styleClass="page-title" text="Nos Médecins" textAlignment="CENTER">
                    <font>
                        <Font name="Roboto Bold" size="24.0" />
                    </font>
                </Label>

                <!-- Scrollable Doctor List -->
                <ScrollPane fitToWidth="true" styleClass="doctor-scroll-pane">
                    <content>
                        <TilePane fx:id="doctorList" hgap="15" vgap="15" prefColumns="3" styleClass="doctor-list">
                            <!-- Doctor cards will be added dynamically -->
                        </TilePane>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
</BorderPane>